<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.dkalugin.ski_forecaster">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ski_forecaster"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".about.About"></activity>
        <activity
            android:name=".condition.Arcificial"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".condition.Crude"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".condition.Old"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".condition.Fresh"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ski_forecaster.SkiForecaster"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".splash.Splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>